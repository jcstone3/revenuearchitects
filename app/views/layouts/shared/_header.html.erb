   <div class="span6">
            <%= link_to image_tag('logo.png', :alt=>"Revenue Grader", :class=>"pull-left" ), root_path %>
            <div class="pull-left brand-name">
              brought to you by&nbsp;<%= link_to image_tag("ra_icon.png", :alt=>"Revenue Architects Logo", :title => "Revenue Architects Website"),"http://www.revenuearchitects.com/", :target => "_blank" %>
              <a href="http://www.revenuearchitects.com/", target="_blank" class="ra_logo">Revenue Architects</a>
            </div>

        </div>
        <div class="span6">
             <% if user_signed_in? %>
             <div class="pull-right">
                <i class="icon-user "></i>&nbsp;
                <%= "#{current_user.email}" %>&nbsp;<br/>
                <i class="icon-home "></i>&nbsp;
                  <%= "#{current_user.name_for_show}"%>
              </div>

              <div class="pull-right button-signin">
                <%= link_to "Logout", destroy_user_session_path, :class=>"btn" %>
              </div>

              <%else%>

              <ul class="nav nav-pills top-links">
                <!-- #TODO: Find active path -->

                <li class="<%#= current_page?(:controller => 'site', :action => 'index') ? "active" : "" -%>"><%= link_to "Home", root_path  %></li>
                <li class="<%#= current_page?(:controller => 'site', :action => 'aboutus') ? "active" : "" -%>"><%= link_to "About Us", aboutus_path %></li>
                <li class="<%#= current_page?(:controller => 'site', :action => 'contactus') ? "active" : "" -%>"><%= link_to "Contact Us", contactus_path %></li>
              </ul><!-- / -->
              <div class="nav pull-right button-bar">
                  <%= link_to "Login", new_user_session_path, :class=>"btn btn-primary" %>
