<div class="container left" style="margin-top:20px;">
  <div class="row-fluid">
    <div class="span12">
      <ul class="nav2 nav2-tabs2" style="margin: 0 0 0px 0px;padding: 0;"> 
        <li><%=link_to 'Feedbacks', admin_feedbacks_url %></li>
        <li><%= link_to 'Questions', admin_questions_url%></a></li>
        <li class="active"><%=link_to 'Sections', admin_sections_url%>
        </li>
        <li><%= link_to 'Users', admin_users_url%></li>
         <li><%= link_to 'Dashboard', admin_root_url %></li>
      </ul>
                             
      <div class="tab-content2"style="padding-top:0px">
        <div class="tab-pane active" id="dashboard" >
          <div class="tabHead">
            <h1>Sub Section</h1>
            <h3> Add New Sub Section </h3>
          </div>
          <div class="content">
            
             <%= simple_form_for(@subsection, :validate=>true, :url=>url_for(:action => 'create_subsection', :controller => 'admin/section')) do |f| %>

              <br/>

              <%= f.input :name, :required => true,
              :label => "Name",
              :input_html => { :class => 'input-xlarge' }, 
              :label_html => { :class => '' } -%> 

              <%= f.input :description, :required => true,
              :label => "Description",
              :as => :text,
              :input_html => {:class => 'input-xxlarge' , :cols => 50, :rows => 3 }, 
              :label_html => { :class => '' } -%>               

              <%= f.association :section, :required => true,
                      :prompt => "Select Section",  
                      :input_html => { :class => 'input-xlarge' }   -%>  
                
              <%= f.button :submit, "Add SubSection", :class => 'btn-primary' %>     
              <%= link_to "Cancel", admin_sections_url  , :class=>"btn btn-primary" %>
                                                                 
              <%end%>
            </div>                               
      </div>
    </div>
  </div>
</div>