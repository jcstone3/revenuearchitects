        <%= render "sections_nav"%>
<% end -%> 

<% content_for :main_content do%>

<div class="row-fluid report-top">
        <%@all_sections.each do |section|%>
        <div class="span4 report-body" >
            <h2><%= section.name%></h2>
         <div>
        <div id="accordion1" class="pageAccordion">
            <% section.sub_sections.each do |sub_section|%>                     
            <h3><a href="#"><%= sub_section.name%></a><i>
                    <%= @subsection_total[sub_section.id - 1]%></i></h3>
        <div>
         <p><% sub_section.questions.each do |question| %>
           <div class="ques"><span>
                    <%= question.id%>.<%= question.name%></span>
                    <i><%= @questions_score[question.id - 1] ? 
                        @questions_score[question.id - 1] : '--' %></i>
           </div>
            <%end%>            
           </p>
         </div>
       <%end%>

                </div>
                <br>
                <br>
                <br>
            </div>

            <div class="scoreBox">
            <div class="finalScore">
            TOTAL POINTS
            <span><%= @section_total[section.id - 1]%>
            </span>
            </div>
            </div>
       </div>
       <%if(section.id < 3)%>
        
    <%end%>
<%end%>                
</div>
</div>
</div><!-- / end of main row -->
 

<div class="row-fluid gradecolor">
<div class="span7 report-footer" >
	<div class="report1">
