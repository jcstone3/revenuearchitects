<% content_for :top_bar_content do  -%>
        <%= render "sections"%>
<% end -%>

 <% content_for :main_content do %>
    <h2 class = 'bread-crumb'>
      <%= @section_name %> : <%= @sub_section_name.upcase %>
    </h2>
    <div class="content">
       <h1 class="question"><span>P<%= @question.sequence %>. </span><%= @question.name%></h1>

            <%= form_for(@response, :url=>reponses_path) do |f|%>
                 <%= f.hidden_field :survey_id, :value=>@survey.id%>
                 <%= f.hidden_field :question_id, :value=>@question.id%>
                 <%= render "questions_set", :f => f%>
                 <%#= hidden_field_tag('section', @question.section_id)%>
            <%end%>
        </div>
<% end %>

<% content_for :popup_notice do  -%>
  <%= render "popup_notice_model"%>
<% end -%>

<% content_for :side_content do -%>
    <%= render "question_side_details" -%>
<% end  -%>

<%= javascript_include_tag "survey" %>
